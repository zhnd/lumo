{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "lumo",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../packages/ui/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "cargo build -p lumo-daemon --release && pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "lumo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["../target/release/lumo-daemon"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyMjYwNzUwRTc3RDYzOTcKUldTWFkzM25VQWNtVXF0RU5ZYkIzSlZuQWNjQjhRVjNoRnZFZXNhbFJKb1VvNGwxWGszZ3ptMksK",
      "endpoints": [
        "https://github.com/zhnd/lumo/releases/latest/download/latest.json"
      ]
    }
  }
}
